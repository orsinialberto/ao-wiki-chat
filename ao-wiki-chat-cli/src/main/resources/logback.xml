<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Property for log directory -->
    <property name="LOG_DIR" value="${user.home}/.wikichat/logs"/>
    <property name="LOG_FILE" value="${LOG_DIR}/wikichat.log"/>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Logger for WikiChat CLI -->
    <logger name="com.example.ao_wiki_chat.cli" level="INFO"/>

    <!-- Logger for API client (can be verbose) -->
    <logger name="com.example.ao_wiki_chat.cli.config.ApiClient" level="WARN"/>

    <!-- Suppress verbose logging from dependencies -->
    <logger name="okhttp3" level="WARN"/>
    <logger name="com.fasterxml.jackson" level="WARN"/>
</configuration>
